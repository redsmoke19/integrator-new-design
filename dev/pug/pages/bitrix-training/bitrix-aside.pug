				+training-aside-sub-item("#","Интеграция сервисов")
				+training-aside-sub-item("#","Лиды")
				+training-aside-sub-item("#","Сделки")
				+training-aside-sub-item("#","Задачи и проекты")
				+training-aside-sub-item("#","Импорт данных")
				+training-aside-sub-item("#","Генерация документов")
				+training-aside-sub-item("#","Бизнес-процессы")
				+training-aside-sub-item("#","Роботы")
				+training-aside-sub-item("#","Отчеты")
				+training-aside-sub-item("#","Интеграция телефонии")
				+training-aside-sub-item("#","Контакт-центр")
