mixin training-aside-sub-item(href,text,pageName)
	li.training-aside__sub-item
		a.training-aside__sub-link(class=pageClass===pageName ? "_active" : false href=pageClass===pageName ? false : href) #{text}

aside.training-aside
	ul.training-aside__list
		li.training-aside__item
			a.training-aside__link(class=pageClass==="bitrix-training" ? "_active" : false href=pageClass==="bitrix-training" ? false : "bitrix-training.html") Обучение Битрикс24
			button.training-aside__button._active
				+icon("icon-chevron", "training-aside__icon", "6", "10")
			ul.training-aside__sub-list._active
				+training-aside-sub-item("interface-overview.html","Интерфейс","bitrix-interface")
				+training-aside-sub-item("#","Интеграция почты")
